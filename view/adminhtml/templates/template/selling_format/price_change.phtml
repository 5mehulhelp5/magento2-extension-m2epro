                    data-<?=$typeForDataset?>-change-index="%index%"
                    style="width: 100%">

                <?php foreach ($priceModifierAttributes as $attributeCode): ?>
                    <?php if(!$block->magentoAttributeHelper->isExistInAttributesArray($attributeCode, $attributes)): ?>
