            <option
                value="<?php echo \Ess\M2ePro\Model\Template\SellingFormat::PRICE_MODIFIER_PERCENTAGE_DECREASE; ?>">
                <?php echo $block->__('Percentage decrease'); ?></option>
            <option
                value="<?php echo \Ess\M2ePro\Model\Template\SellingFormat::PRICE_MODIFIER_ATTRIBUTE_INCREASE; ?>">
                <?php echo $block->__('Increase by Attribute Value'); ?></option>
            <option
                value="<?php echo \Ess\M2ePro\Model\Template\SellingFormat::PRICE_MODIFIER_ATTRIBUTE_DECREASE; ?>">
                <?php echo $block->__('Decrease by Attribute Value'); ?></option>
        </select>

        <div style="width: 250px; display: inline-block">
            <input name="<?=$type?>_modifier_value[%index%]"
